generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_STATUS {
  ACTIVE
  INACTIVE
  DELETED
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String
  email    String      @unique
  password String
  status   USER_STATUS @default(ACTIVE)
  logs     Log[]
}

enum LOGS_STATUS {
  SUCCESS
  FAILED
}

enum MODULES {
  AUTH
  USER
}

enum LOGS_ACTION {
  CREATE
  UPDATE
  DELETE
}

model Log {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  type    MODULES
  status  LOGS_STATUS
  action  LOGS_ACTION
  message String
}
